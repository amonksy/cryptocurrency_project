tdm <- DocumentTermMatrix(corpus)

tdm.matrix <- as.matrix(tdm)
tdm.matrix <- sort(rowSums(tdm.matrix), decreasing=TRUE)

tdm.df <- data.frame(word=names(tdm.matrix), freq=tdm.matrix)
head(tdm.df,10)
wordcount <- colSums(tdm.matrix)
